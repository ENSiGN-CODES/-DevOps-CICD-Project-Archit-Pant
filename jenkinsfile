pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = "archit-devops-app"
        CONTAINER_NAME = "archit-webapp"
        APP_PORT = "8080"
    }
    
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/ENSiGN-CODES/-DevOps-CICD-Project-Archit-Pant.git'
            }
        }
        
        stage('Maven Build') {
            steps {
                dir('java-app/webapp') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }
        
        stage('Docker Build') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} ."
                    sh "docker tag ${DOCKER_IMAGE}:${BUILD_NUMBER} ${DOCKER_IMAGE}:latest"
                }
            }
        }
        
        stage('Deploy Container') {
            steps {
                script {
                    sh """
                        docker stop ${CONTAINER_NAME} || true
                        docker rm ${CONTAINER_NAME} || true
                        docker run -d --name ${CONTAINER_NAME} -p ${APP_PORT}:8080 ${DOCKER_IMAGE}:latest
                    """
                }
            }
        }
    }
    
    post {
        success {
            echo 'Deployment successful'
        }
        always {
            sh 'docker image prune -f'
        }
    }
}
